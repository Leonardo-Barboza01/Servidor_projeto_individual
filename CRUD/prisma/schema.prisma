generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // Alterado de postgresql para mysql
  url      = env("DATABASE_URL")
}

// Molde categoria
model Categoria { // Sugiro começar com Letra Maiúscula
  id    String @id @default(uuid())
  nome  String

  data_criacao   DateTime @default(now()) // Corrigido de DataTime
  data_alteracao DateTime @updatedAt      // Corrigido de DataTime
  
  animais Animal[] // Um animal pertence a uma categoria

  @@map("categorias")
}

// Molde animal 
model Animal {
  id      String  @id @default(uuid())
  nome    String 
  raca    String
  peso    Float   // Corrigido de floot
  status  Boolean

  data_criacao   DateTime @default(now())
  data_alteracao DateTime @updatedAt

  categoria   Categoria @relation(fields: [idCategoria], references: [id])
  idCategoria String

  @@map("animais")
}

// Model Produtos
model Produto {
  id        String @id @default(uuid())
  nome      String 
  preco     Float  // Corrigido de preso floot
  descricao String 
  estoque   Int    @default(0)

  data_criacao   DateTime @default(now())
  data_alteracao DateTime @updatedAt

  @@map("produtos")
}